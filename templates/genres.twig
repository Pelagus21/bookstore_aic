<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Home Page</title>
    <meta charset="UTF-8">
    <title>Login Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>


<!-- Nav Bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-info text-white container-fluid mb-5">
    <div class="container-fluid flex-row">
        <a class="navbar-brand" href="\home">Home</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-light ml-4" type="submit">Search</button>
        </form>
    </div>
</nav>
<!-- ~Nav Bar -->


<!-- Carousels container -->
<div class="container-fluid">

    {% for oneGenreWithBooks in res %}
    <!-- Carousel -->
    <div id="carouselExampleControls" class="carousel slide h-50 mt-5 d-flex justify-content-center"
         data-ride="carousel">
        <div class="carousel-inner bg-info">

            <!-- Carousel Header -->
            <a href="{{ "/genre/ %s" | format(oneGenreWithBooks.genre.Id_of_genre) }}">
                <h3 class="text-light ml-3 pt-1">{{ oneGenreWithBooks.genre.Genre_name }}
                    ({{ oneGenreWithBooks.genre.count }})</h3>
            </a>
            <!-- ~Carousel Header -->
            {% for book in oneGenreWithBooks.books %}
                <!-- Carousel Inner Content -->
                {% if (loop.index - 1) % 3 == 0 %}
                    <div class="carousel-item active">
                    <div class=" container-fluid mt-3 mb-2 justify-content-center d-inline-flex">
                {% endif %}

                <!-- Card -->
                <div class="card mx-5 h-100" style="width: 18rem;">
                    <a href="{{ "/book/ %s" | format(book.Book_id) }}">
                        {% set id = book.Book_id %}
                        <img src="{{ book.Image_url }}"
                             alt="Second slide" class="w-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ book.Book_name }}</h5>
                            <a href="{{ "/author/ %s" | format(book.Author_id) }}">
                                <h5 class="card-title">{{ book.author_name }}</h5>
                            </a>
                            <p class="card-text">{{ book.Price }}</p>
                            <p class="card-text"> {{ book.Description|length > 50 ? book.Description|slice(0, 50) ~ '...' : book.Description }}</p>
                        </div>
                    </a>
                </div>
                <!-- ~Card -->
                {% if (loop.index - 1) % 3 == 2 %}
                    </div>
                    </div>
                {% endif %}
            {% endfor %}
            {% if oneGenreWithBooks.books.length % 3 != 0 %}
                    </div>
                    </div>
            {% endif %}
             <!-- ~Carousel Inner Content -->

        </div>
    </div>
    {% endfor %}
</div>


</body>
</html>